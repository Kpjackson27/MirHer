extends layouts/default

block content
	.container
		.row
			.col-md-12.text-center
				h3 MirHer Products
				br
			.col-md-4.col-md-offset-5
				i.pe-7s-plus
					span 
						a(href="/admin/addproducts") Add Product
			.col-md-12
				br
				table.table
					thead
						tr
							th ID
							th Image
							th Type
							th Texture
							th Quantity
							th Delete
							th Edit
						tbody
							- each product, i in products
								tr
									td= product.productid
									td= product._id
									td 
										img(src="#{product.image}")
									td= product.type
									td= product.texture
									td= product.quantity
									td
										i.pe-7s-junk
											span
												a(href="#")
									td
										i.pe-7s-bandaid
											span
												a(href="#")


		