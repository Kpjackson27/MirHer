extends layouts/default

block content
	.container
		.row
			.col-md-12.text-center
				h3 MirHer - Add Coupon Code
				h5 potentially we can speicify number of parts and length of each part. e.g., 55G2-DHM0-50NN (3 parts, length is 4)
	.container
		.row
			br
			form(Method="POST", enctype="multipart/form-data")
				input(type='hidden', name='_csrf', value=_csrf)
				.col-md-4
					label(for="payload") Select Image to upload
					input#payload(type="file" name="file" accept="image/*")
				.col-md-8
					.col-md-5
						h5 Type
						.form-group
							input.form-control.form-fix(name='type', id='type', type='text', placeholder='e.g., 10 for 10% off', required)
						h5 Category
						.form-group
							input.form-control.form-fix(name='category', id='category', type='text', placeholder='e.g., allhairs, 6Ahair, 8Ahair or other', required)
						.form-group
							input.button.outline.btn-block(type="submit", value="Create Coupon Code")
